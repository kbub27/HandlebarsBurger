<li class="list-group-item list-group-item-primary">
	{{name}}

	{{#if devour}}
	<button class="btn btn-outline-danger btn-sm change-devour" data-id="{{id}}" data-newdevour="{{devour}}">
		Devour it!
	</button>
	{{else}}
	<button class="btn btn-success btn-sm change-devour" data-id="{{id}}" data-newdevour="{{devour}}">
		Remake this burger!
	</button>
	{{/if}}

</li>