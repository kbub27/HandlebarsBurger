<div class="row">
  <div class="col s12">
    <h3>Eat-Da-Burger!</h3>
  </div>

  <div class="col s6">
    <h4>Burgers to Devour!</h4>

    <ol class="pl">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ol>
  </div>

  <div class="col s6">
    <h4>Devoured Burgers!</h4>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col s3"></div>
  <div class="col s6">
    <h3>Add a Burger</h3>
    <form class="create-form">

      <div class="form-group">
        <label for="bu">
          <h6>Burger Name:</h6>
        </label>
        <input type="text" id="bu" name="name">
      </div>
      <button class="btn" type="submit">Add Burger</button>
    </form>
  </div>
  <div class="col s3"></div>
</div>